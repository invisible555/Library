@model List<Library.Web.ViewModels.Loans.MyLoanItemVm>

@{
    ViewData["Title"] = "My loans";
}

<h1>My active loans</h1>

@if (TempData["Success"] is string s)
{
    <div class="alert alert-success">@s</div>
}
@if (TempData["Error"] is string e)
{
    <div class="alert alert-danger">@e</div>
}

@if (Model.Count == 0)
{
    <p>You have no active loans.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Qty</th>
                <th>Borrowed</th>
                <th>Due</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var overdue = item.DueAt.Date < DateTime.UtcNow.Date;

                <tr>
                    <td>@item.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.BorrowedAt.ToLocalTime().ToString("yyyy-MM-dd")</td>
                    <td>
                        @item.DueAt.ToLocalTime().ToString("yyyy-MM-dd")
                        @if (overdue)
                        {
                            <span class="badge bg-danger ms-2">Overdue</span>
                        }
                    </td>
                    <td>
                        <form asp-action="Return" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="loanId" value="@item.LoanId" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Return</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Books" asp-action="Index">Back to books</a>
