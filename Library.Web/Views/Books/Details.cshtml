@model Library.Domain.Entities.Book

@{
    ViewData["Title"] = "Book details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Model.Isbn</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Total copies</dt>
        <dd class="col-sm-10">@Model.TotalCopies</dd>

        <dt class="col-sm-2">Available copies</dt>
        <dd class="col-sm-10">@Model.AvailableCopies</dd>
    </dl>
</div>

<div>
    <a asp-action="Index">Back to list</a>

    @if (User.Identity?.IsAuthenticated == true && Model.AvailableCopies > 0)
    {
        <span> | </span>
        <a asp-controller="Loans"
           asp-action="Borrow"
           asp-route-bookId="@Model.Id"
           asp-route-title="@Model.Title"
           asp-route-available="@Model.AvailableCopies">
            Borrow
        </a>
    }

    @if (User.IsInRole("Admin"))
    {
        <span> | </span>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
</div>
